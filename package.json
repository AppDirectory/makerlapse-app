{
  "name": "Makerlapse",
  "description": "CRA + Electron sitting in a tree",
  "author": "Ilias Haddad",
  "version": "1.1.1",
  "private": true,
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.0.20",
    "@ffmpeg/ffmpeg": "0.6.1",
    "@sentry/electron": "1.3.0",
    "aperture": "^5.2.0",
    "easytimer": "^1.1.1",
    "electron-is-dev": "1.1.0",
    "electron-log": "^4.1.0",
    "electron-updater": "^4.2.5",
    "electron-util": "^0.14.0",
    "execa": "^4.0.0",
    "filereader": "^0.10.3",
    "jimp": "^0.9.5",
    "menubar": "^8.0.0",
    "moment": "^2.24.0",
    "node-blob": "^0.0.2",
    "node-sass": "^4.13.1",
    "os": "^0.1.1",
    "parse-ms": "^2.1.0",
    "pretty-ms": "^6.0.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-rnd": "^10.1.5",
    "react-router-dom": "^5.1.2",
    "read-chunk": "^3.2.0",
    "screenshot-desktop": "^1.11.0",
    "stream-to-blob": "^2.0.0",
    "streamifier": "^0.1.1",
    "uniqid": "^5.2.0",
    "url": "^0.11.0",
    "uuid": "^3.4.0",
    "youtube-mp3-downloader": "^0.6.6"
  },
  "devDependencies": {
    "@rescripts/cli": "^0.0.14",
    "@rescripts/rescript-env": "^0.0.12",
    "concurrently": "5.1.0",
    "cross-env": "^7.0.2",
    "electron": "7.1.11",
    "electron-builder": "^22.3.2",
    "electron-builder-notarize": "^1.1.2",
    "prettier": "^1.4.4",
    "react-scripts": "3.3.1",
    "wait-on": "^4.0.1"
  },
  "build": {
    "extraResources": "videos",
    "compression": "maximum",
    "directories": {
      "buildResources": "assets"
    },
    "appId": "com.github.ilias.makerlapse-app",
    "productName": "Makerlapse",
    "copyright": "Copyright Â© 2019 ${author}",
    "artifactName": "${productName}.${ext}",
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "src/assets/icons/icon.png"
    },
    "afterSign": "electron-builder-notarize",
    "mac": {
      "electronUpdaterCompatibility": ">=2.16",
      "category": "public.app-category.productivity",
      "minimumSystemVersion": "10.12.0",
      "hardenedRuntime": true,
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Makerlapse needs access to the microphone to be able to record audio for screen recordings.",
        "NSUserNotificationAlertStyle": "alert",
        "CFBundleDocumentTypes": [
          {
            "CFBundleTypeName": "Video",
            "CFBundleTypeRole": "Viewer",
            "LSHandlerRank": "Alternate",
            "LSItemContentTypes": [
              "public.mpeg-4",
              "com.apple.quicktime-movie"
            ]
          }
        ]
      },
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "src/assets/icons/icon_512.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && yarn electron-build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
